@model CarSharing.Models.User

@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card animate__animated animate__slideInUp">
                <div class="card-body animate__animated animate__fadeIn animation-delay-05s">
                    <h1 class="card-title text-center display-4">Login</h1>
                    <hr />
                    <form asp-action="Login" class="animate__animated animate__fadeIn animation-delay-075s">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input asp-for="Login" class="form-control" placeholder="Enter your username" />
                            <span asp-validation-for="Login" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary d-flex mx-auto mt-3 px-5 rounded-pill">Login</button>
                            <div class="separator">or</div>
                            <p class="d-flex justify-content-around">Don't have an account? <a asp-action="Register">Register here</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    input[type=text], input[type=password], input[type=email] {
        border: 0px;
        border-bottom: 1px black solid !important;
        margin-top: 20px;
        box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
