@model CarSharing.Models.User

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center display-4">Delete</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Login:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Login) 
                            @if (Model.IsAdmin)
                            {
                                <span class="badge bg-success">Admin</span>
                            }
                        </dd>
                        <dt class="col-sm-3">Name:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
                        <dt class="col-sm-3">Surname:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Surname)</dd>
                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
                        <dt class="col-sm-3">Address:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>
                        <dt class="col-sm-3">Postal Code:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.PostalCode)</dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="text-center">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
